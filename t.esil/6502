#-------------------------------------------------------------------------
# ASL
#-------------------------------------------------------------------------

NAME="op: asl a"
FILE=malloc://0x200
CMDS='
e asm.arch=6502; e asm.anal=6502; e asm.bits=8; aei; aeim
ar a=0x20
wx 0a0a0a
aes; ar a; ar flags
aes; ar a; ar flags
aes; ar a; ar flags
'
EXPECT='0x00000040
0x00000000
0x00000080
0x00000080
0x00000000
0x00000003
'
run_test

NAME="op: asl \$10"
FILE=malloc://0x200
CMDS='
e asm.arch=6502; e asm.anal=6502; e asm.bits=8; aei; aeim
ae 0x20,0x10,=[1]
wx 061006100610
aes; pu 1 @0x10; ar flags
aes; pu 1 @0x10; ar flags
aes; pu 1 @0x10; ar flags
'
EXPECT='%40
0x00000000
%80
0x00000080
%00
0x00000003
'
run_test

