NAME="op: lda (\$10,x)"
FILE=malloc://0x200
CMDS='
e asm.arch=6502; e asm.anal=6502; e asm.bits=8; aei; aeim
ae 0x42,0x108,=[1]
ae 0x108,0x18,=[2]
ar x=0x08
wx a110
aes
ar a
'
EXPECT='0x00000042
'
run_test

NAME="op: lda (\$10),y"
FILE=malloc://0x200
CMDS='
e asm.arch=6502; e asm.anal=6502; e asm.bits=8; aei; aeim
aei;aeim
ae 0x42,0x108,=[1]
ae 0x100,0x10,=[2]
ar y=0x08
wx b110
aes
ar a
'
EXPECT='0x00000042
'
run_test

