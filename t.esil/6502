#!/bin/sh
for a in . .. ../.. ; do [ -e $a/tests.sh ] && . $a/tests.sh ; done

#-------------------------------------------------------------------------
# LDA
#-------------------------------------------------------------------------
NAME="op: lda #\$42"
FILE=malloc://0x200
CMDS='
e asm.arch=6502;e asm.anal=6502;e asm.bits=8; aei; aeim
wx a942
aes
ar a
'
EXPECT='0x00000042
'
run_test


NAME="op: lda \$10"
FILE=malloc://0x200
CMDS='
e asm.arch=6502; e asm.anal=6502; e asm.bits=8; aei; aeim
ae 0x42,0x10,=[1]
wx a510
aes
ar a
'
EXPECT='0x00000042
'
run_test

NAME="op: lda \$10,x"
FILE=malloc://0x200
CMDS='
e asm.arch=6502;e asm.anal=6502;e asm.bits=8; aei; aeim
ae 0x42,0x20,=[1]
ar x=0x10
wx b510
aes
ar a
'
EXPECT='0x00000042
'
run_test

NAME="op: lda \$0100"
FILE=malloc://0x200
CMDS='
