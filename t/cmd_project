#!/bin/sh
# GPL 3+ - Copyright (C) 2012-2015  jvoisin

[ -e tests.sh ] && . ./tests.sh || . ../tests.sh

NAME='Import project'
FILE=malloc://512
ARGS=
CMDS="e dir.projects = ../files/projects
Po test > /dev/null
C*"
EXPECT='CCu base64:U29tZSB0ZXN0 @ 0x00404890
'
run_test

NAME='Import project with overwriting'
FILE=malloc://512
ARGS=
CMDS='e dir.projects = ../files/
CC Some test @ 0x00404890
Po test > /dev/null
CC*
'
EXPECT='CCu base64:U29tZSB0ZXN0 @ 0x00404890
'
run_test

NAME='Import project with overwriting'
FILE=malloc://512
BROKEN=
ARGS=
CMDS='e dir.projects = /tmp/
e asm.bits=64
wx 31ed4989d15e4889e24883e4f0505449c7c09024410048c7c12024410048c7c7a0284000e857dcfffff4
af test
afF @ fcn.test
pdf
Ps test > /dev/null
Pc test~afF
rm /tmp/test
'
EXPECT='/ (fcn) fcn.test
\           0x00000000 (42 byte folded function)
afF @ 0x00000000
'
run_test



NAME='Export project'
FILE=malloc://512
ARGS=
CMDS='e dir.projects = /tmp/
CC "Some other test" @ 0x00404890
Ps test > /dev/null
cat /tmp/test | grep base
rm /tmp/test
'
EXPECT='CCu base64:IlNvbWUgb3RoZXIgdGVzdCI= @ 0x00404890
'
run_test

NAME='Set, export, unset and import'
FILE=malloc://512
ARGS=
CMDS='e dir.projects = /tmp/
CC "First comment" @ 0x00404890
CC "Second comment" @ 0x00404800
Ps test > /dev/null
C- @ 0x00404890
C- @ 0x00404800
Po project.r2
cat /tmp/test | grep CC
rm /tmp/test
'
EXPECT='CCu base64:IkZpcnN0IGNvbW1lbnQi @ 0x00404890
CCu base64:IlNlY29uZCBjb21tZW50Ig== @ 0x00404800
'
run_test

NAME='xrefs'
FILE=malloc://512
ARGS=
CMDS='ax 1
e dir.projects = /tmp/
e file.project=test
ax
Ps
ax
'
EXPECT='types=code.jmp,code.call,data.mem,data.string
ref.unk.0x0=0x1
xref.unk.0x1=0
test
types=code.jmp,code.call,data.mem,data.string
ref.unk.0x0=0x1
xref.unk.0x1=0
'
run_test

NAME='Import mapped project'
FILE=malloc://512
ARGS=
CMDS="e dir.projects = ../files/projects
Po resetc64 > /dev/null
pu 3 @0xc000"
EXPECT='%4c%e2%fc
'
run_test

NAME='asm.emu in project'
FILE=../bins/elf/simpleARM.elf
BROKEN=1
ARGS=
CMDS='e asm.flags = false
e asm.emu = true
e dir.projects = /tmp/
Ps test > /dev/null
Po test
CC-
pd 1
rm /tmp/test
'
EXPECT='            0x08000060      0d20a0e3       mov r2, 0xd                ; r2=0xd -> 0x2000000
'
run_test
